td = object.email
td = I18n.t("activerecord.enums.user.user_roles.#{object.role}")
- if object.student_orders.present?
  td = object.pending_balance

td.actions
  = smart_listing_item_actions [{ \
    name: :edit,
    remote: true,
    url: edit_admin_user_path(object) \
  },
  { \
    name: :custom,
    url:  '',
    method: :put,
    icon: 'far fa-credit-card mx-1', remote: true,
    if: (object.pending_balance > 0), title: 'Aplicar nuevo pago' \
  }]
